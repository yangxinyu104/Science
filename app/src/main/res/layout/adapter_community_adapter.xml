<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2"
    xmlns:fresco="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:layout_marginBottom="@dimen/dp_10"
        >

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/Community_Adapter_headPic"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_marginLeft="@dimen/dp_12"
            fresco:roundedCornerRadius="@dimen/dp_90"
            android:layout_marginTop="@dimen/dp_32"/>
        <TextView
            android:id="@+id/Community_Adapter_nickName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="糗事"
            android:layout_toRightOf="@+id/Community_Adapter_headPic"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_32"/>
        <TextView
            android:id="@+id/Community_Adapter_publishTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分钟"
            android:layout_toRightOf="@+id/Community_Adapter_nickName"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_32"/>
        <TextView
            android:id="@+id/Community_Adapter_signature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="签名"
            android:layout_below="@+id/Community_Adapter_nickName"
            android:layout_toRightOf="@+id/Community_Adapter_headPic"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_14"/>
        <TextView
            android:id="@+id/Community_Adapter_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="内容"
            android:layout_below="@+id/Community_Adapter_headPic"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_15"/>

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/Community_Adapter_file"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_100"
            fresco:roundedCornerRadius="@dimen/dp_15"
            android:layout_below="@+id/Community_Adapter_content"
            android:layout_marginTop="@dimen/dp_18"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_10"
            />

        <ImageView
            android:background="@mipmap/common_icon_prise"
            android:id="@+id/Community_Adapter_praise_imager"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:layout_below="@+id/Community_Adapter_file"
            android:layout_toLeftOf="@+id/Community_Adapter_praise"
            android:layout_marginRight="@dimen/dp_6"
            />
        <TextView
            android:id="@+id/Community_Adapter_praise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Community_Adapter_file"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_12"/>
        <CheckBox
            android:id="@+id/Community_Adapter_common_icon_comment_n_hdpi"
            android:background="@mipmap/common_icon_comment"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:button="@null"
            android:layout_below="@+id/Community_Adapter_file"
            android:layout_toLeftOf="@+id/Community_Adapter_comment"
            android:layout_marginRight="@dimen/dp_6"
            android:layout_marginBottom="@dimen/dp_10"
            />
        <TextView
            android:id="@+id/Community_Adapter_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Community_Adapter_file"
            android:layout_toLeftOf="@+id/Community_Adapter_praise_imager"
            android:layout_marginRight="@dimen/dp_20"/>

        <RelativeLayout
            android:id="@+id/Community_Adapter_RelativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Community_Adapter_comment"
            android:background="#DEDEDE"
            android:visibility="gone"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10">
            <com.jcodecraeer.xrecyclerview.XRecyclerView
                android:id="@+id/Community_Adapter_communityCommentVoList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                ></com.jcodecraeer.xrecyclerview.XRecyclerView>
            <TextView
                android:id="@+id/Community_Adapter_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="点击查看更多评论"
                android:textColor="#866DFA"
                android:layout_below="@+id/Community_Adapter_communityCommentVoList"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/dp_10"/>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>