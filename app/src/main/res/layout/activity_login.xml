<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.LoginActivity"
    android:orientation="vertical"
    android:background="@mipmap/bitmap"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dp_40"
        android:layout_marginRight="@dimen/dp_40"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_100"
            android:orientation="horizontal">

            <EditText
                android:textSize="@dimen/sp_16"
                android:textColor="@color/wihte"
                android:id="@+id/login_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/wihte"
                android:digits="1234567890"
                android:drawableLeft="@mipmap/phone"
                android:drawablePadding="@dimen/dp_20"
                android:hint="手机号"
                android:maxLength="11"
                android:paddingBottom="@dimen/dp_15"
                android:phoneNumber="true"
                android:textColorHint="#fff" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/login_RelativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_32"
            android:orientation="horizontal">

            <EditText
                android:textSize="@dimen/sp_16"
                android:password="true"
                android:textColor="@color/wihte"
                android:id="@+id/login_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/wihte"
                android:drawableLeft="@mipmap/lock"
                android:drawablePadding="@dimen/dp_20"
                android:hint="登录密码"
                android:paddingBottom="@dimen/dp_15"
                android:textColorHint="#fff" />

            <ImageView
                android:id="@+id/login_eye"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/eye" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/login_regist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_10"
                android:text="快速注册"
                android:textColor="@color/wihte"
                android:textSize="@dimen/sp_14" />

        </RelativeLayout>

        <Button
            android:id="@+id/login"
            android:layout_width="@dimen/dp_280"
            android:layout_height="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_100"
            android:background="@drawable/selector_btn"
            android:text="登录"
            android:textColor="@color/wihte"
            android:textSize="@dimen/sp_18" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_25"
            android:layout_marginTop="@dimen/dp_40"
            android:gravity="center"
            android:orientation="horizontal">

            <View
                android:layout_width="@dimen/dp_110"
                android:layout_height="@dimen/dp_2"
                android:background="#ffffff"
                android:gravity="center_vertical" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_15"
                android:paddingLeft="@dimen/dp_5"
                android:paddingRight="@dimen/dp_5"
                android:text="第三方账号快速登录"
                android:textColor="#ffffff"
                android:textSize="@dimen/dp_10" />

            <View
                android:layout_width="@dimen/dp_110"
                android:layout_height="@dimen/dp_2"
                android:background="#ffffff"
                android:gravity="center_vertical" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/dp_70"
             android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/login_weixin"
                android:layout_weight="1"
                android:src="@mipmap/weixin"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30" />
            <ImageView
                android:id="@+id/login_renlian"
                android:layout_weight="1"
                android:src="@mipmap/login_icon_artificialintelligence_n"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30" />

        </LinearLayout>


    </LinearLayout>
</RelativeLayout>